<html ng-app="app.todos">
    <head>
        <title>Node/Angular Todos</title>
        
        <link rel="stylesheet" href="//stackpath.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="//stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    
        <link rel="stylesheet" href="assets/css/style.css">
        <link href="assets/img/favicon.ico" type="image/x-icon" rel="icon" />

        <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.2.0/js/xeditable.min.js"></script> 
        <script src="/assets/js/main/app.js"></script>
        <script src="/assets/js/main/services/svTodos.js"></script>
        
    </head>
    <body ng-controller="todoController">
        <div class="container">
                <div class="jumbotron text-center">
                    <h1>{{ appName }} <span class="label label-info">{{todos.length}}</span></h1>
                </div>

                <div id="todo-list" class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <div class="checkbox" ng-repeat="todo in todos">
                            
                            <input type="checkbox" ng-model="todo.isDone" ng-change="updateTodo(todo)">
                            <a ng-click="deleteTodo(todo)"><i class="fa fa-remove"></i></a>
                            <a ng-click="textBtnForm.$show()" ng-hide="textBtnForm.$visible"><i class="fa fa-edit" ></i></a>
                            <span class="editableform" ng-class="{strike: todo.isDone}" editable-text="todo.text" e-form="textBtnForm" onaftersave="updateTodo(todo)">{{ todo.text  }}</span>
                        </div>
                        <p class="text-center" ng-show="loading">
                            <span class="fa fa-spinner fa-spin fa-3x"></span>
                        </p>
                    </div>
                </div>

                <div id="todo-form" class="row">
                    <div class="col-sm-8 col-sm-offset-2 text-center">
                        <form>
                            <div class="form-group">
                                <input type="text" ng-model="formData.text" class="form-control input-lg text-center" placeholder="What do you want to do?">
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg" ng-click="createTodo()" ng-disabled="!formData.text">Add</button>
                        </form>
                    </div>
                </div>
        </div> 
    </body>
</html>